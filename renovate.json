{
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "groupName": "js formatter and linter",
      "matchPackageNames": [
        "/^@eslint/js$/",
        "/^eslint$/",
        "/^prettier$/",
        "/^typescript-eslint$/"
      ]
    },
    {
      "matchDatasources": ["npm"],
      "minimumReleaseAge": "3 days"
    },
    {
      "groupName": "octokit",
      "matchPackageNames": ["/^@octokit//"]
    },
    {
      "groupName": "actions",
      "matchPackageNames": ["/^@actions//"]
    }
  ]
}
